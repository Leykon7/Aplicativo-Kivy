#:kivy 1.11.1
<MyWidget>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: Ip
            text: 'porta'
            on_enter: root.endIp(self)
        TextInput:
            id: Porta
            text: 'porta'
            on_enter: root.porta(self)
        Button:
            id: conectar
            text:'Conectar'    
    TextInput:
        id: address
        # on_enter: root.endereco()
    Label:
        id: leitura
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text:'Holding Register'
            on_release: root.lerDado(self, 1)
        Button:
            text: 'Coil'
            on_release: root.lerDado(self, 2)
        Button:
            text: 'Input Register'
            on_release: root.lerDado(self, 3)
        Button:
            text: 'Discrete Register'
            on_release: root.lerDado(self, 4)
    CheckBox:
        id: checkbox
        Active: root.checkbox(self, self.active)